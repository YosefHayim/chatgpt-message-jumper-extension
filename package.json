{
  "name": "ai-conversation-navigator",
  "displayName": "AI Conversation Navigator",
  "version": "2.0.0",
  "description": "Advanced navigation and analytics for ChatGPT, Claude, and Gemini conversations",
  "author": "YosefHayim",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "npm run clean && npm run bundle && npm run copy-assets",
    "bundle": "esbuild src/content.ts --bundle --outfile=dist/content.js --format=iife --target=chrome90 && esbuild src/popup.ts --bundle --outfile=dist/popup.js --format=iife --target=chrome90",
    "copy-assets": "cpy icons dist --parents && cpy \"assets/*.{json,html,css}\" dist --flat",
    "build:chrome": "npm run build && ./scripts/build-chrome.sh",
    "build:firefox": "npm run build && ./scripts/build-firefox.sh",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "del-cli dist dist-firefox *.zip"
  },
  "dependencies": {},
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@types/chrome": "^0.1.31",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "cpy-cli": "^5.0.0",
    "del-cli": "^5.1.0",
    "esbuild": "^0.19.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
